fn init_keyword(keyword: char const*): char const* {
  keyword = str_intern(keyword);
  // TODO If rio doesn't give warnings, the underlying compiler also shouldn't.
  buf_push((:void**)&keywords, (:void*)&keyword, sizeof(keyword));
  return keyword;
}

