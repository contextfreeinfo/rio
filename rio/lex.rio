struct SrcPos {
  name: char const*;
  line: int;
}

let pos_builtin: SrcPos = {name = "<builtin>"};

struct Token {
  kind: TokenKind;
  mod: TokenMod;
  suffix: TokenSuffix;
  pos: SrcPos;
  start: char const*;
  end: char const*;
  union {
    int_val: ullong;
    float_val: double;
    str_val: char const*;
    name: char const*;
  }
}

let token: Token;
let stream: char const*;
let line_start: char const*;

fn vnotice(level: char const*, pos: SrcPos, fmt: char const*, args: va_list) {
  if (pos.name == NULL) {
    pos = pos_builtin;
  }
  printf("%s(%d): %s: ", pos.name, pos.line, level);
  vprintf(fmt, args);
  printf("\n");
}

fn warning(pos: SrcPos, fmt: char const*, ...) {
  let args: va_list;
  va_start(&args, &fmt);
  vnotice("warning", pos, fmt, args);
  va_end(&args);
}

fn verror(pos: SrcPos, fmt: char const*, args: va_list) {
  vnotice("error", pos, fmt, args);
}

fn error(pos: SrcPos, fmt: char const*, ...) {
  let args: va_list;
  va_start(&args, &fmt);
  verror(pos, fmt, args);
  va_end(&args);
}

fn fatal_error(pos: SrcPos, fmt: char const*, ...) {
  let args: va_list;
  va_start(&args, &fmt);
  verror(pos, fmt, args);
  va_end(&args);
  exit(1);
}

