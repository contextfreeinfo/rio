fn get_stmt_note(stmt: &Stmt, name: *const char) -> &Note {
  for (let i: usize = 0; i < stmt.notes.num_notes; i++) {
    let note = stmt.notes.notes + i;
    if (note.name == name) {
      return note;
    }
  }
  return NULL;
}

