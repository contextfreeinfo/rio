main* = for () be
    name = "Alice"
    alice = Person {name, age = 40}
    describe alice
    describe {alice.age, name = "Bob"}
    describe (build "Carl" 10)
    describe with
        age = 9
        name = "Denise"
    end
    eli: Person = {name = "Eli", age = 35}
    describe eli
end

Person = struct with
    name:Text
    age:Int32
end

build = for name:Text age:Int32 :Person be {name, age}

describe = for person:Person be
    # TODO Text interp and auto struct printing.
    print "Person:"
    print person.name
    print branch of
        person.age >= 18 to "adult"
        true to "minor"
    end
    print ""
end
