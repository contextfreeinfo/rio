fn print_any(any: Any) {
  switch (any.type) {
  case typeof(int):
    printf("%d", *(:int const*)any.ptr);
  case typeof(float):
    printf("%f", *(:float const *)any.ptr);
  default:
    printf("<unknown>");
  }
  printf(": ");
  print_type(any.type);
}

