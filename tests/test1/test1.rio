    printf("slice[%zu]: %s\n", index, name);
  }
  // And refs.
  for &(slice) do(name) {
    *name = "Someone";
  }
  // And index slices for kicks.
  printf("%s, %s, and %s\n", slice[0], friends[1], friends[2]);
}

