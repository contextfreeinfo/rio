fn fact_iter(n: int) -> int {
  let r = 1;
  for (let i = 0; i <= n; i++) {
    r *= i;
  }
  return r;
}

fn fact_rec(n: int) -> int {
  if (n == 0) {
    return 1;
  } else {
    return n * fact_rec(n-1);
  }
}

