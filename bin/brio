export RIOHOME="$(dirname "$(dirname "$(readlink -f "$0")")")"
export RIOOS=linux

if [[ "$1" == "-g" ]]; then
  build_args="-g"
  run=valgrind
  shift
else
  build_args=""
  run=""
fi

if [ ! -e "$RIOHOME/bin/rio" ]; then
  "$RIOHOME/build" $build_args
fi

# run="/usr/bin/time -v $run"

$run "$RIOHOME/bin/rio" "$@"
